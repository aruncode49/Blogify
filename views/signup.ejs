<%- include('./partials/header') %>

<div class="container form">
  <h1 class="form__heading">Sign Up</h1>
  <form action="/user/signup" method="POST" class="form__control">
    <label for="name" class="signup__name">Name</label>
    <input type="text" id="name" name="name" placeholder="Enter your name" />

    <label for="email" class="signup__email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Enter your email"
    />

    <label for="password" class="signup__password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Enter your password"
    />

    <button type="submit" class="signup_submit_btn">Register</button>

    <p class="form__last__msg">Already have an account? <a class="form_redirect_link" href="/user/login">Login</a></p>
  </form>
</div>

<%- include('./partials/footer') %>
